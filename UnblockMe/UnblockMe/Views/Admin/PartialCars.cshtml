@model List<Cars>

@foreach (var car in Model)
{

    <button type="button" class="btn btn-primary car" id="@car.LicensePlate" data-toggle="modal" data-target="#editCars">@car.LicensePlate</button>
}


<div class="modal fade" id="editCars" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <input hidden type="text" id="licensePlate" />
                <label for="brand">Brand</label>
                <input type="text" id="brand" name="brand" />
                <br />
                <label for="color">Color</label>
                <input type="text" id="color" name="color" />
                <br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary gray" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/partialcar.js"></script>