@using Microsoft.AspNetCore.Identity
@using UnblockMe.Models;
@model List<Cars>
@{
    ViewData["Title"] = "Main Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width= , initial-scale=1.0">
    <title>UnblockMe - @ViewData["Title"]</title>
    <link href="~/css/MainPage.css" rel="stylesheet" />
</head>
<body>
    <div class="form-container">
        <form method="get" asp-controller="MainPage" asp-action="Index" id="form1">
            <label for="licensePlate">Enter license plate:</label>
            <input type="text" placeholder="License Plate" name="licensePlate" id="licensePlate" />
            <button type="submit">
                Search
            </button>

        </form>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="car-notfound" style="text-align: center;">
            <p>
                <b>Car not found!</b>
            </p>
        </div>
    }
    else
    {
        <div class="tabel-contaier">
            <table class="car_tabel">
                <thead>
                    <tr>
                        <th>License Plate</th>
                        <th>Brand</th>
                        <th>Color</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LicensePlate</td>
                            <td>@item.Brand</td>
                            <td>@item.Color</td>
                            <td>@item.Owner?.FirstName</td>
                            <td>@item.Owner?.LastName</td>
                            <td>@item.Owner?.Email</td>
                            <td>@item.Owner?.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>

    }
</body>
</html>

